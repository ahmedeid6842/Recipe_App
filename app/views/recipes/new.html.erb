<section class="container">
  <h1 class="text-center">
    Add a new Recipe for current user (<%= @user.name %>)
  </h1>
  <div class="p-4">
    <%= form_with model: [@recipe], method: :post do |form| %>
      <div class="form-group">
        <%= form.label :name %><br> 
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group py-4">
        <%= form.label :preparation_time %><br>
        <%= form.number_field :preparation_time, step: 0.01, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :cooking_time %> <br>
        <%= form.number_field :cooking_time, step: 0.01, class: 'form-control' %>
      </div>

      <div class="form-group py-4">
        <%= form.label :description %><br> 
        <%= form.text_area :description, class: 'form-control' %>
      </div>

      <div>
        <%= form.label :public, "Public" %><br>
        <%= form.check_box :public, class: 'form-check-input' %>
      </div>
      
      <div class="text-center"><br>
        <%= form.submit 'Create Recipe', class: "btn btn-primary btn-lg container mt-4" %>
      </div>
    <% end %>
  </div> 
</section>