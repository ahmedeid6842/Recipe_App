<section class="bg-light">

    <h2 class="text-center mb-3">Public Recipes</h2>

    <%@recipes.each do |recipe|%>
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div class="col-6">
                    <h4 class="card-title">
                        <%= link_to recipe.name, recipe_path(recipe),method: :get, class:"link-secondary" %>
                    </h4>
                    <p class="card-subtitle mb-2 text-muted">by <%= recipe.user.name %>
                    </p>
                </div>
                <div class="col-6 d-flex justify-content-end">
                    <div class="d-flex flex-column justify-content-between align-items-end">
                        <p class="mb-1">Total Food Item: <span class="badge bg-primary">
                                <%= recipe.total_food_items %>
                            </span></p>
                        <p class="mb-1">Total Price: <span class="badge bg-primary">
                                <%= recipe.total_price %>
                            </span></p>
                    </div>
                </div>
            </div>
        </div>
        <%end%>


            </div>