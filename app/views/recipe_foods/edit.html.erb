<section class="container">
  <h1>Add ingredients</h1>

  <%= form_with model: @recipe_food, method: :patch do |form| %>
    <div class="form-group">
      <%= form.label :food_id %><br>
      <%= form.select :food_id, options_from_collection_for_select(@foods, 'id', 'name'), {}, { class: 'form-control' } %>
    </div>

    <%= form.hidden_field :recipe_id, value: @recipe.id %>

    <div class="form-group py-4">
      <%= form.label :quantity %><br>
      <%= form.number_field :quantity, class: 'form-control' %>
    </div>

    <%= form.submit 'Modify', class: 'btn btn-primary' %>
  <% end %>
</section>
